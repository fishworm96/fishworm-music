.searchContainer {
  padding: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx;
}
.searchInput {
  flex: 1;
  background: rgba(237, 237, 237, .3);
  border-radius: 30rpx;
  position: relative;
}
.cancel {
  width: 30rpx;
  height: 60rpx;
  position: absolute;
  right: 10rpx;
  top: 0;
  z-index: 14;
}
.searchButton {
  width: 100rpx;
  text-align: center;
}
.searchIcon {
  position: absolute;
  top: 0;
  left: 15rpx;
}
.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}
.placeholder {
  font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}
.hotItem .iconClass {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  display: flex;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

/* 搜索历史 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.history .title {
  font-size: 28rpx;
}
.history .historyItem {
  height: 50rpx;
  font-size: 26rpx;
  background: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.history .delete {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
}